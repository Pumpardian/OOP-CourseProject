<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ACS_Reception.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ACS_Reception.UI"
    xmlns:pages="clr-namespace:ACS_Reception.UI.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Reception">

    <ShellContent
        Title="Attendance"
        ContentTemplate="{DataTemplate pages:AttendancePage}"
        Route="AttendancePage" />

    <ShellContent
        Title="Cards"
        ContentTemplate="{DataTemplate pages:CardsPage}"
        Route="CardsPage" />

    <ShellContent
        Title="Doctors"
        ContentTemplate="{DataTemplate pages:DoctorsPage}"
        Route="DoctorsPage" />

    <ShellContent
        Title="Charts"
        ContentTemplate="{DataTemplate pages:ChartsPage}"
        Route="ChartsPage" />

</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ACS_Reception.UI.Pages.AddOrEditDoctorPage"
             xmlns:converters="clr-namespace:ACS_Reception.UI.ValueConverters"
             xmlns:models="clr-namespace:ACS_Reception.UI.ViewModels"
             xmlns:entities="clr-namespace:ACS_Reception.Domain.Entities;assembly=ACS_Reception.Domain"
             x:DataType="models:AddOrEditDoctorPageViewModel"
             Title="AddOrEditDoctorPage">

    <ContentPage.Resources>
        <converters:ValueToBooleanConverter x:Key="IsNotNull"/>

        <ResourceDictionary Source="/Styles/AttendStyle.xaml"/>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Spacing="10">
            <Border Style="{StaticResource ItemsBorder}">
                <VerticalStackLayout>
                    <HorizontalStackLayout Style="{StaticResource ItemLayout}">
                        <Label Text="Doctor Type" Style="{StaticResource ItemText}"/>
                        <Picker ItemsSource="{Binding DoctorTypes}" SelectedItem="{Binding Request.Doctor.DoctorType}" Style="{StaticResource ItemPicker}"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Style="{StaticResource ItemLayout}">
                        <Label Text="Last Name" Style="{StaticResource ItemText}"/>
                        <Entry Text="{Binding Request.Doctor.LastName}" Placeholder="Last Name" Style="{StaticResource ItemEntry}"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Style="{StaticResource ItemLayout}">
                        <Label Text="First Name" Style="{StaticResource ItemText}"/>
                        <Entry Text="{Binding Request.Doctor.FirstName}" Placeholder="First Name" Style="{StaticResource ItemEntry}"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Style="{StaticResource ItemLayout}">
                        <Label Text="Cabinet Number" Style="{StaticResource ItemText}"/>
                        <Entry Text="{Binding Request.Doctor.CabinetNumber}" TextChanged="Entry_TextChanged" Placeholder="Cabinet Number" Keyboard="Numeric" Style="{StaticResource ItemEntry}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <Button Text="Save" Command="{Binding AddOrEditDoctorCommand}" Style="{StaticResource Button}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
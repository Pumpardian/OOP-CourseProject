<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ACS_Reception.UI.Pages.AttendancePage"
             xmlns:converters="clr-namespace:ACS_Reception.UI.ValueConverters"
             xmlns:models="clr-namespace:ACS_Reception.UI.ViewModels"
             xmlns:entities="clr-namespace:ACS_Reception.Domain.Entities;assembly=ACS_Reception.Domain"
             x:DataType="models:AttendancePageViewModel"
             x:Name="Attendance"
             Title="">

    <ContentPage.Resources>
        <converters:ValueToBooleanConverter x:Key="IsNotNull" />

        <ResourceDictionary Source="/Styles/AttendStyle.xaml"/>
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
        EventName="Appearing"
        Command="{Binding BindingContext.UpdateCardListCommand, Source={x:Reference Attendance}}" />
    </ContentPage.Behaviors>

    <ScrollView Style="{StaticResource Scroll}">
        <StackLayout Spacing="10">
            <Border Style="{StaticResource ItemsBorder}">
                <VerticalStackLayout>
                    <HorizontalStackLayout Style="{StaticResource ItemLayout}">
                        <Label Text="Card" Style="{StaticResource ItemText}"/>
                        <Picker ItemsSource="{Binding Cards}" SelectedItem="{Binding AttendanceInfo.Card}" Style="{StaticResource ItemPicker}"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Style="{StaticResource ItemLayout}">
                        <Label Text="Reason" Style="{StaticResource ItemText}"/>
                        <Picker ItemsSource="{Binding AttendanceReasons}" SelectedItem="{Binding AttendanceInfo.AttendanceReason}" Style="{StaticResource ItemPicker}">
                            <Picker.Behaviors>
                                <toolkit:EventToCommandBehavior EventName="SelectedIndexChanged"
                                                            Command="{Binding BindingContext.UpdateDoctorListCommand, Source={x:Reference Attendance}}" />
                            </Picker.Behaviors>
                        </Picker>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Style="{StaticResource ItemLayout}">
                        <Label Text="Doctor" Style="{StaticResource ItemText}"/>
                        <Picker ItemsSource="{Binding DoctorsToAttend}" SelectedItem="{Binding AttendanceInfo.Doctor}" Style="{StaticResource ItemPicker}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <Button Text="Attend" Command="{Binding AttendCommand}" Style="{StaticResource Button}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
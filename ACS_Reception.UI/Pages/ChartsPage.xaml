<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ACS_Reception.UI.Pages.ChartsPage"
             xmlns:microChartsMaui="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:microCharts="clr-namespace:Microcharts;assembly=Microcharts.Maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:ACS_Reception.UI.ViewModels"
             x:Name="Charts"
             x:DataType="models:ChartsPageViewModel"
             Title="">

    <ScrollView>
        <VerticalStackLayout>
            <Label HorizontalOptions="Center" FontSize="Medium" Text="Clients Age Chart"/>
            <microChartsMaui:ChartView x:Name="CardChart" HeightRequest="500"/>

            <Label HorizontalOptions="Center" FontSize="Medium" Text="Donut Version"/>
            <microChartsMaui:ChartView x:Name="CardChartDonut" HeightRequest="200"/>

            <Label HorizontalOptions="Center" FontSize="Medium" Text="Doctor Type Chart"/>
            <microChartsMaui:ChartView x:Name="DocChart" HeightRequest="500"/>

            <Label HorizontalOptions="Center" FontSize="Medium" Text="Donut Version"/>
            <microChartsMaui:ChartView x:Name="DocChartDonut" HeightRequest="200"/>

            <Label HorizontalOptions="Center" FontSize="Medium" Text="Record Type Chart"/>
            <microChartsMaui:ChartView x:Name="RecChart" HeightRequest="500"/>

            <Label HorizontalOptions="Center" FontSize="Medium" Text="Donut Version"/>
            <microChartsMaui:ChartView x:Name="RecChartDonut" HeightRequest="200"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>